@inherits MenuListBase;

<li class="@LiClasses()">
    <a class="@MenuCss.LinkClasses(MenuBranch)" href="@GetUrl()" 
        data-bs-toggle="@(MenuBranch.Page.HasChildren && MenuBranch.Page.IsClickable == false ? "dropdown" : "")"
    >
        @MenuBranch.Page.Name
    </a>

    @if (MenuBranch.HasChildren)
    {
        <MenuMain MenuBranch="MenuBranch"></MenuMain>
    }
</li>
