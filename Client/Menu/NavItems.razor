@inherits MenuBase;
@using Microsoft.AspNetCore.Components;
@using Oqtane.Themes.Controls;
@using ToSic.Oqt.Themes.ToShineBs5.Client.Services;

@code {
    [Parameter]
    public MenuBranch MenuBranch { get; set; }
}

@if (MenuBranch.HasChildren)
{
    <ul class="@(MenuBranch.MenuLevel == 0 ? "navbar-nav" : "dropdown-menu")">
        @foreach(var pageNav in MenuBranch.Children)
        {
            <NavItem MenuBranch="pageNav"></NavItem>
        }
    </ul>
}

