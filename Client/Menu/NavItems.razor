@inherits MenuBase;
@using Microsoft.AspNetCore.Components;
@using Oqtane.Themes.Controls;
@using ToSic.Oqt.Themes.ToShineBs5.Client.Nav;

@if(PageNavigator.HasChildren)
{
    <ul class="@(PageNavigator.CurrentPage == null || PageNavigator.First == true ? "navbar-nav" : "dropdown-menu")">
        @if (PageNavigator.HasChildren)
        {
            @foreach(var pageNav in PageNavigator.Children)
            {
                <NavItem PageNavigator="pageNav"></NavItem>
            }
        }
    </ul>
}

@code{
    [Parameter()]
    public PageNavigator PageNavigator { get; set; }
}