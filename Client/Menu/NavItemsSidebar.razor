@using ToSic.Oqt.Themes.ToShineBs5.Client.Services;
@inherits NavItems;

@code {
    private string UlClasses()
    {
        return "ul-collapse collapse collapse-" + MenuBranch.Page.PageId;
    }
}
@if (MenuBranch.HasChildren)
{
    <ul class="@(MenuBranch.MenuLevel == 0 ? "navbar-nav" : UlClasses())">
        @foreach(var pageNav in MenuBranch.Children)
        {
            <NavItemSidebar MenuBranch="pageNav"></NavItemSidebar>
        }
    </ul>
}
