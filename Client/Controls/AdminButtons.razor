@using Microsoft.Extensions.Localization
@using ToSic.Oqt.Themes.ToShineBs5.Client.Utilities
@inherits ThemeControlBase
@inject AdminLogic AdminLogic
@*
    File Purpose:       Shows the Toggle-Edit and Show-Control-Panel Buttons
    Recommendations:    We recommend to use inline SVGs for performance reasons.
    Nice to know:       -
*@
@* Button: Edit *@
@if (PageState.UserIsEditor() || (PageState.Page.IsPersonalizable && PageState.UserIsRegistered()))
{
    var isPressed = PageState.EditMode.ToString().ToLower();
    <a class="to-shine-ui-buttons" data-bs-toggle="button" aria-pressed="@isPressed" autocomplete="off" @onclick="async () => await AdminLogic.ToggleEditMode(PageState)">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
            <path d="M7.127 22.562l-7.127 1.438 1.438-7.128 5.689 5.69zm1.414-1.414l11.228-11.225-5.69-5.692-11.227 
                11.227 5.689 5.69zm9.768-21.148l-2.816 2.817 5.691 5.691 2.816-2.819-5.691-5.689z"/>
        </svg>
    </a>
}

