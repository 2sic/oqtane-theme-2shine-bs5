{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "dotnet",
  "args": [],
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet",
      "args": ["pack", "-c", "release", "--no-build"],
      "problemMatcher": "$msCompile",
      "group": {
        "_id": "build",
        "isDefault": false
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet",
      "args": ["test"],
      "problemMatcher": "$msCompile",
      "group": {
        "_id": "test",
        "isDefault": false
      }
    }
  ]
}
